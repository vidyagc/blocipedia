

 <h1>Edit Wiki</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for wikis</p>
     <ul>
       <li>Curse words not allowed and will be censored.</li>
       <li>Language indicating direct threats will be censored and reported to authorities.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
   
     <% if current_user %>
 <!-- #20 -->
       <%= render 'collaborators/form', collaborator: Collaborator.new, wiki: @wiki %>
     <% end %>
   
     <div>
       <h3>Collaborators</h3>
       <%= render @wiki.collaborators %>
     </div>
   
 </div>
 

